<component>
	<api>
		<prop name="btn_width" default="65" type="int" />
		<prop name="btn_height" default="65" type="int" />
	</api>
	<styles>
		<style name="style_local" bg_opa="0%" border_width="0" shadow_opa="0%" pad_all="0" radius="0" />
	</styles>
	<view
		extends="lv_button"
		height="$btn_height"
		width="$btn_width"
		scrollable="false"
		align="center"
		style_border_width="1"
		style_radius="10"
		style_pad_all="3"
		style_border_color="0x000000"
		style_bg_color="0xffffff"
		style_shadow_width="30"
	>
		<lv_obj width="100%" height="100%" align="center" scrollable="false">
			<style name="style_local" />
			<lv_image src="notification_icon" align="center" />
		</lv_obj>
		<lv_obj
			width="45%"
			height="45%"
			style_radius="50%"
			align="top_right"
			scrollable="false"
			style_border_width="0"
			style_bg_color="0xff003a"
		>
			<lv_label
				align="center"
				bind_text="notifications_counter"
				style_text_color="0xffffff"
				bind_text-fmt="%d"
				style_text_font="roboto_black_12"
			/>
			<bind_flag_if_eq flag="hidden" ref_value="0" subject="notifications_counter" />
		</lv_obj>
	</view>
</component>
